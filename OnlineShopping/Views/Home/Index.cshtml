@{
    ViewBag.Title = "Home Page";
}
<style>
    .carousel img {
        top: 0;
        left: 0;
        max-height: 400px;
        min-width: 100%;
        height: 500px;
        max-width: none;
        -o-object-fit: cover;
        object-fit: cover;
        overflow: hidden;
    }
</style>

<div class="jumbotron">
    <h1>Online Shopping</h1>    
    
</div>

<div class="row">
    
</div>
<div id="imageCarousel" class="carousel slide" data-interval="2000">
    <ol class="carousel-indicators">
        <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#imageCarousel" data-slide-to="1"></li>
        <li data-target="#imageCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Image/Milo.jpg" class="img-responsive" alt="no image found" />
            <div class="carousel-caption">
                <h3>Milo</h3>
                <p>Kekal Bertenaga</p>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/Image/Ikan.jpg" class="img-responsive" alt="no image found" />
            <div class="carousel-caption">
                <h3>Ikan</h3>
                <p>Kekal Segar</p>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/Image/Ayam.jpg" class="img-responsive" alt="no image found" />
            <div class="carousel-caption">
                <h3>Ayam</h3>
                <p>Kekal Kenyang</p>
            </div>
        </div>
    </div>
    <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a href="#imageCarousel" class="carousel-control right" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>