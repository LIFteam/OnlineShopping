@model IEnumerable<OnlineShopping.Models.product>

@{
    ViewBag.Title = "Catalog";
}

<h2>Catalog</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model.productName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productQuantity)
            </th>
            <th></th>
        </tr>      
        @foreach (var item in Model)
        {
            <tr>                
                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productContent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productQuantity)
                </td>
                <td>
                    <td>
                    @Html.ActionLink("Add to cart", "AddCart", new { id = item.productID })
                </td>
                </td>
            </tr>
        }
        </table>
}
